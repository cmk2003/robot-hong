# 环境配置示例
# 复制此文件为 .env 并填写实际值

# 运行环境：development / production
ENV=development

# LLM 提供商：qwen / deepseek
LLM_PROVIDER=qwen

# 千问 API 密钥
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DeepSeek API 密钥（可选，使用DeepSeek时需要）
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 数据库路径（可选，默认 ./data/emotional_bot.db）
DATABASE_PATH=./data/emotional_bot.db

# 日志级别（可选，默认 INFO）
LOG_LEVEL=INFO

# Gradio 配置（可选）
GRADIO_SERVER_PORT=7860
